#include "UnderGlow.h"


        UnderGlow::UnderGlow(int port1,int port2){

              alliance=new Relay(port1);
              turbo=new Relay(port2);
        }
        UnderGlow::~UnderGlow(){
                delete alliance;
                delete turbo;
        }
        
        void UnderGlow::SetUnderGlow(Color color){
                if(color&RED==RED)
                {
                    alliance->Set(color&BLUE==BLUE?Relay::kON:Relay::kReverse);
                }
                else
                  {
                    alliance->Set(color&BLUE==BLUE?Relay::kForward:Relay::kOff);

                  }
                turbo->Set(color&GREEN==GREEN?Relay::kON:Relay::kForward);
        }
     
