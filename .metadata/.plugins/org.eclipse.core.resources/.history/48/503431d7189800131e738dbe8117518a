#include "UnderGlow.h"


        UnderGlow::UnderGlow(int r,int g,int b){

               red=new DoubleSolenoid(r,r);
                green=new DoubleSolenoid(g,g);
                blue=new DoubleSolenoid(b,b);
        }
        UnderGlow::~UnderGlow(){
                delete red;
                delete green;
                delete blue;
        }
        
        void UnderGlow::SetUnderGlow(Color color){
                red->Set(color&RED==RED?DoubleSolenoid::kReverse:DoubleSolenoid::kOff);
                green->Set(color&GREEN==GREEN?DoubleSolenoid::kReverse:DoubleSolenoid::kOff);
               blue->Set(color&BLUE==BLUE?DoubleSolenoid::kReverse:DoubleSolenoid::kOff);
        }
     
