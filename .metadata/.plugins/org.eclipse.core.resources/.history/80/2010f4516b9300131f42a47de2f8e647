#include "WPILib.h"

/**
 * This is a demo program showing the use of the RobotBase class.
 * The SimpleRobot class is the base of a robot application that will automatically call your
 * Autonomous and OperatorControl methods at the right time as controlled by the switches on
 * the driver station or the field controls.
 */ 
class RobotDemo : public SimpleRobot
{

public:
	RobotDemo()
	{
	}

	/**
	 * Drive left & right motors for 2 seconds then stop
	 */
	void Autonomous()
	{
		
	}

	/**
	 * Runs the motors with arcade steering. 
	 */
	void OperatorControl()
	{
		DriverStationLCD::GetInstance()->PrintfLine(DriverStationLCD::kUser_Line1,"Testing Enabled");
		DriverStationLCD::GetInstance()->UpdateLCD();

		//Talon *motor=new Talon(1);
		//Talon *motor2=new Talon(2);
		//Talon *motor3=new Talon(3);
		//Talon *motor4=new Talon(4);
		Joystick *joy=new Joystick(1);
		while (IsOperatorControl())
		{
			//motor->Set(0.5);
			//motor2->Set(0.5);
			//motor3->Set(0.5);
			//motor4->Set(0.5);
			DriverStationLCD::GetInstance()->Clear();
			DriverStationLCD::GetInstance()->PrintfLine(DriverStationLCD::kUser_Line1,"Testing Enabled");
			for(int i=0;i<20;++i){
				if(joy->GetRawButton(i))DriverStationLCD::GetInstance()->PrintfLine(DriverStationLCD::kUser_Line2,"button %i",i);

			}
			//DriverStationLCD::GetInstance()->PrintfLine(DriverStationLCD::kUser_Line2,"Axis 5: %d",joy->GetRawAxis(5));
		//DriverStationLCD::GetInstance()->PrintfLine(DriverStationLCD::kUser_Line3,"Axis 6: %d",joy->GetRawAxis(6));

			DriverStationLCD::GetInstance()->UpdateLCD();

			
			Wait (0.05);
		}
	}
	
	/**
	 * Runs during test mode
	 */
	void Test() {

	}
};

START_ROBOT_CLASS(RobotDemo);

